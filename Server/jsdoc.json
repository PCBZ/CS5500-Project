{
    "tags": {
        "allowUnknownTags": ["component"]
    },
    "source": {
        "include": ["src"],
        "includePattern": ".+\\.js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown",
        "better-docs/component",
        "better-docs/category"
    ],
    "opts": {
        "encoding": "utf8",
        "destination": "./docs/",
        "recurse": true,
        "verbose": true,
        "template": "node_modules/better-docs"
    },
    "templates": {
        "better-docs": {
            "name": "User Management API Documentation",
            "title": "User Management API Documentation",
            "css": "style.css",
            "trackingCode": "",
            "navigation": [
                {
                    "label": "Github",
                    "href": "https://github.com/yourusername/your-repo"
                }
            ]
        }
    },
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    }
} 